# Função de cores
RED='\e[91m'; GREEN='\e[92m'; YELLOW='\e[93m'; BLUE='\e[94m'; PURPLE='\e[95m'; CYAN='\e[96m'; RESET='\e[0m'

echo -e "${RED}"
cat << "EOF"
