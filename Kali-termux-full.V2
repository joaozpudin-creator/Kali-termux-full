██╔════╝ ██╔══██╗██║     ██║██╔════╝╚██╗ ██╔╝
██║  ███╗███████║██║     ██║█████╗   ╚████╔╝ 
██║   ██║██╔══██║██║     ██║██╔══╝    ╚██╔╝  
╚██████╔╝██║  ██║███████╗███████╗   ██║   
 ╚═════╝  ╚═╝  ╚═╝╚══════╝╚══════╝   ╚═╝
      KALI TERMUX FULL PRO V2
EOF
echo -e "${RESET}"
sleep 2

# ===============================
# 1. Atualizar Termux
# ===============================
echo -e "${YELLOW}[1/12] Atualizando Termux...${RESET}"
pkg update -y && pkg upgrade -y
pkg install wget curl git proot-distro python python-pip ruby nano figlet lolcat -y
gem install lolcat
sleep 1

# ===============================
# 2. Instalar Kali Linux
# ===============================
echo -e "${YELLOW}[2/12] Instalando Kali Linux via Proot...${RESET}"
proot-distro install kali
sleep 1

# ===============================
# 3. Instalar XFCE e VNC
# ===============================
echo -e "${YELLOW}[3/12] Instalando XFCE4, VNC e dependências...${RESET}"
proot-distro login kali -- bash -c "
apt update -y
apt upgrade -y
apt install xfce4 xfce4-goodies tightvncserver git curl python3-pip neofetch figlet lolcat -y
apt install arc-theme papirus-icon-theme -y
"

# ===============================
# 4. Configuração VNC
# ===============================
echo -e "${YELLOW}[4/12] Configurando VNC...${RESET}"
proot-distro login kali -- bash -c "
vncserver -kill :1 >/dev/null 2>&1
mkdir -p ~/.vnc
cat > ~/.vnc/xstartup <<'EOV'
#!/bin/sh
xrdb \$HOME/.Xresources
startxfce4 &
EOV
chmod +x ~/.vnc/xstartup
"

# ===============================
# 5. Scripts startvnc / stopvnc
# ===============================
echo -e "${YELLOW}[5/12] Criando scripts startvnc / stopvnc...${RESET}"
cat > $PREFIX/bin/startvnc << 'EOF'
#!/data/data/com.termux/files/usr/bin/bash
proot-distro login kali -- bash -c "vncserver :1 -geometry 1280x720 -depth 24"
echo "Abra o VNC Viewer e conecte-se a: 127.0.0.1:5901"
EOF

cat > $PREFIX/bin/stopvnc << 'EOF'
#!/data/data/com.termux/files/usr/bin/bash
proot-distro login kali -- bash -c "vncserver -kill :1"
EOF

chmod +x $PREFIX/bin/startvnc $PREFIX/bin/stopvnc

# ===============================
# 6. Painel interativo
# ===============================
echo -e "${YELLOW}[6/12] Criando painel interativo...${RESET}"
pkg install whiptail -y

cat > $PREFIX/bin/kali << 'EOF'
#!/data/data/com.termux/files/usr/bin/bash
while true; do
CHOICE=$(whiptail --title "KALI TERMUX FULL PRO V2" --menu "Selecione uma opção" 20 70 12 \
"1" "Abrir shell do Kali" \
"2" "Iniciar VNC" \
"3" "Parar VNC" \
"4" "Instalar ferramentas extras" \
"5" "Abrir MaxPhisher" \
"6" "Abrir ZPhisher" \
"7" "Atualizar tudo" \
"8" "Reiniciar Proot" \
"0" "Sair" 3>&1 1>&2 2>&3)
exitstatus=$?
if [ $exitstatus != 0 ]; then
    break
fi

case $CHOICE in
1) proot-distro login kali ;;
2) startvnc ;;
3) stopvnc ;;
4) proot-distro login kali -- bash -c "apt install -y kali-linux-large" ;;
5) proot-distro login kali -- bash -c "cd ~/MaxPhisher && python3 maxphisher.py" ;;
6) proot-distro login kali -- bash -c "cd ~/zphisher && bash zphisher.sh" ;;
7) proot-distro login kali -- bash -c "apt update -y && apt upgrade -y" ;;
8) proot-distro login kali -- bash -c "exit" ;;
0) exit ;;
esac
done
EOF
chmod +x $PREFIX/bin/kali

# ===============================
# 7. Ferramentas extras
# ===============================
echo -e "${YELLOW}[7/12] Instalando ferramentas extras (MaxPhisher, ZPhisher, DarkFly)...${RESET}"
proot-distro login kali -- bash -c "
git clone https://github.com/khansaad1275/MaxPhisher
git clone https://github.com/htr-tech/zphisher
git clone https://github.com/Ranginang67/DarkFly-Tool
git clone https://github.com/mishakorzik/AllHackingTools
"

# ===============================
# 8. Banner e tela de boas-vindas
# ===============================
echo -e "${YELLOW}[8/12] Criando banner e tela de boas-vindas...${RESET}"
cat > $PREFIX/etc/motd << 'EOF'
██████╗  █████╗ ██╗     ██╗
██╔══██╗██╔══██╗██║     ██║
██████╔╝███████║██║     ██║
██╔══██╗██╔══██║██║     ██║
██████╔╝██║  ██║███████╗███████╗ FULL PRO V2
└ Criado por: joaozpudin-creator
EOF

# ===============================
# 9. Instalação +100 ferramentas (modular)
# ===============================
echo -e "${YELLOW}[9/12] Instalando pacotes de pentest +100 ferramentas...${RESET}"
proot-distro login kali -- bash -c "
apt install -y nmap sqlmap hydra metasploit-framework wpscan nikto gobuster dirb cupp seclists sherlock responder hashcat aircrack-ng ettercap-text-only john wireshark-cli zphisher"
# Pode expandir para mais ferramentas depois

# ===============================
# 10. Modo Turbo (otimização)
# ===============================
echo -e "${YELLOW}[10/12] Aplicando otimizações de performance...${RESET}"
proot-distro login kali -- bash -c "
echo 'vm.swappiness=10' >> /etc/sysctl.conf
echo 'fs.inotify.max_user_watches=524288' >> /etc/sysctl.conf
"

# ===============================
# 11. Barra de progresso animada
# ===============================
echo -e "${YELLOW}[11/12] Finalizando instalação com barra de progresso...${RESET}"
for i in {1..20}; do
  sleep 0.1
  echo -ne "["
  for j in $(seq 1 $i); do echo -n "█"; done
  for j in $(seq $i 20); do echo -n "-"; done
  echo -ne "] $((i*5))%\r"
done
echo -e "\n"

